const numeroSecreto = 27; // Cambia este valor manualmente
let intentos = 0;
const intentosMaximos = 3;
let nombreJugador = '';
let edadjugador = '';

function iniciarJuego() {
  nombreJugador = document.getElementById('nombreJugador').value.trim();
  edadjugador = document.getElementById('edadjugador').value.trim();

  if (nombreJugador === '' || edadjugador === '') {
    alert('‚ö† Por favor, ingresa tu nombre y edad.');
    return;
  }

  mostrarSeccion('zonaJuego');
  document.getElementById('introJuego').textContent = `¬°Buena suerte, ${nombreJugador}! üéØ`;
  document.getElementById('entradaNumero').disabled = false;
  document.getElementById('entradaNumero').focus();
}

function adivinar() {
  const entrada = document.getElementById('entradaNumero');
  const mensaje = document.getElementById('mensaje');
  const intentosDiv = document.getElementById('intentos');
  const numero = parseInt(entrada.value);

  if (isNaN(numero) || numero < 1 || numero > 100) {
    mensaje.style.color = 'red';
    mensaje.textContent = '‚ö† Ingresa un n√∫mero v√°lido entre 1 y 100.';
    return;
  }

  intentos++;

  if (numero === numeroSecreto) {
    mensaje.style.color = '#00ff99';
    mensaje.textContent = `üéâ ¬°Bien hecho, ${nombreJugador}! Adivinaste el n√∫mero ${numeroSecreto} en ${intentos} intento(s).`;
    entrada.disabled = true;
    mostrarBotonesReinicio();
  } else if (numero < numeroSecreto) {
    mensaje.style.color = '#ffff66';
    mensaje.textContent = 'üîº El n√∫mero secreto es m√°s alto.';
  } else {
    mensaje.style.color = '#ff6666';
    mensaje.textContent = 'üîΩ El n√∫mero secreto es m√°s bajo.';
  }

  intentosDiv.textContent = `Intentos: ${intentos} de ${intentosMaximos}`;

  if (intentos >= intentosMaximos && numero !== numeroSecreto) {
    mensaje.style.color = 'orange';
    mensaje.textContent = `‚ùå Perdiste. El n√∫mero era ${numeroSecreto}.`;
    entrada.disabled = true;
    mostrarBotonesReinicio();
  }
}

function mostrarBotonesReinicio() {
  document.getElementById('reiniciarBtn').style.display = 'inline-block';
  
}

function reiniciarJuego() {
  location.reload();
}

function volverAlInicio() {
  intentos = 0;
  document.getElementById('pantallaInicio').style.display = 'block';
  document.getElementById('zonaJuego').style.display = 'none';
  document.getElementById('nombreJugador').value = '';
  document.getElementById('edadjugador').value = '';
  document.getElementById('entradaNumero').value = '';
  document.getElementById('entradaNumero').disabled = true;
  document.getElementById('mensaje').textContent = '';
  document.getElementById('intentos').textContent = 'Intentos: 0';
  document.getElementById('reiniciarBtn').style.display = 'none';
  document.getElementById('volverInicioBtn').style.display = 'none';
}

function mostrarSeccion(id) {
  document.getElementById('pantallaInicio').style.display = 'none';
  document.getElementById('zonaJuego').style.display = 'none';
  
  document.getElementById(id).style.display = 'block';
}
